\
# Simulated yield index\
np.random.seed(42)\
rainfall["Yield_Index"] = (\
    rainfall["average_rain_fall_mm_per_year"] * 0.01 +\
    np.random.normal(0, 0.4, len(rainfall))\
)\
\
temperature["Yield_Index"] = (\
    temperature.iloc[:, 2] * 0.05 +\
    np.random.normal(0, 0.4, len(temperature))\
)\
\
# Pearson correlations\
rain_r, rain_p = pearsonr(\
    rainfall["average_rain_fall_mm_per_year"],\
    rainfall["Yield_Index"]\
)\
\
temp_r, temp_p = pearsonr(\
    temperature.iloc[:, 2],\
    temperature["Yield_Index"]\
)\
\
print("Rainfall\'96Yield Pearson r:", rain_r, "p-value:", rain_p)\
