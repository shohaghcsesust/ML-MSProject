import numpy as np\
from scipy.stats import pearsonr\
\
def correlation_ci(r, n, alpha=0.05):\
    z = np.arctanh(r)\
    se = 1 / np.sqrt(n - 3)\
    z_crit = 1.96  # 95% CI\
    lo = z - z_crit * se\
    hi = z + z_crit * se\
    return np.tanh(lo), np.tanh(hi)\
\
